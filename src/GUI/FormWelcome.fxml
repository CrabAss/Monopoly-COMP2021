<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="480.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.ControllerWelcome">
   <children>
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fitHeight="123.0" fitWidth="493.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@resources/monopoly-title.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </ImageView>
            <Button fx:id="NewGame" mnemonicParsing="false" onAction="#HandleNewGame" prefHeight="56.0" prefWidth="189.0" text="New Game" textAlignment="CENTER">
               <font>
                  <Font name="Courier New Bold" size="26.0" />
               </font>
            </Button>
            <Button fx:id="LoadGame" mnemonicParsing="false" onAction="#HandleLoadGame" prefHeight="56.0" prefWidth="189.0" text="Load Game" textAlignment="CENTER">
               <font>
                  <Font name="Courier New Bold" size="26.0" />
               </font>
            </Button>
            <Button fx:id="Quit" mnemonicParsing="false" onAction="#HandleQuit" prefHeight="56.0" prefWidth="189.0" text="Quit" textAlignment="CENTER">
               <font>
                  <Font name="Courier New Bold" size="26.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
